#ifndef COMMON_BASE_STRING_FORMAT_PRINT_H
#define COMMON_BASE_STRING_FORMAT_PRINT_H
#pragma once

#include <string>
#include "thirdparty/monitor_sdk_common/base/string/format/print_arg.h"

namespace common {

//////////////////////////////////////////////////////////////////////////////
// 0 arg

int StringPrintTo(std::string* out, const char* format);
int StringPrintAppend(std::string* out, const char* format);
std::string StringPrint(const char* format);

$var n = 16
$range i 1..n

$for i [[

$range j 1..i

//////////////////////////////////////////////////////////////////////////////
// $i args

int StringPrintTo(std::string* out, const char* format,
                  $for j,
                  [[const FormatPrintArg& arg$j]]);

int StringPrintAppend(std::string* out, const char* format,
                      $for j,
                      [[const FormatPrintArg& arg$j]]);

std::string StringPrint(const char* format,
                        $for j,
                        [[const FormatPrintArg& arg$j]]);

]]

} // namespace common

#endif // COMMON_BASE_STRING_FORMAT_PRINT_H
